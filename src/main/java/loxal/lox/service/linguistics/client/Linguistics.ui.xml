<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:style>
        .upload {
            border: 0;
        }
    </ui:style>

    <g:DockLayoutPanel unit="EM">
        <!--<g:north size="7.9">-->
        <!--			<meta.layout:Header ui:field="header"/> -->
        <!--<g:HTMLPanel/>-->
        <!--</g:north>-->

        <g:center>
            <g:TabLayoutPanel barHeight="25" ui:field="tabBar">
                <g:tab>
                    <g:header>
                        <ui:msg>Translator</ui:msg>
                    </g:header>
                    <g:VerticalPanel>
                        <g:RichTextArea ui:field="text1"/>
                        <g:TextArea ui:field="text" visibleLines="22" characterWidth="80"
                                    text="This is yet another test..."/>
                        <g:Frame ui:field="upload" url="/linguistics/upload.jsp" stylePrimaryName="{style.upload}"/>
                        <g:Label ui:field="textCharNumber"/>
                        <g:Label ui:field="textContent"/>
                        <g:Button text="Estimate Price" ui:field="estimatePrice"/>
                        <g:Button text="Process Text" ui:field="cloudProcess"/>
                    </g:VerticalPanel>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>

        <!--<g:south size="2">-->
        <!--<meta.layout:Footer ui:field="footer"/> -->
        <!--<g:HTMLPanel>-->
        <!--</g:HTMLPanel>-->
        <!--</g:south>-->
    </g:DockLayoutPanel>
</ui:UiBinder>