    <developers>
        <developer>
            <name>Alexander Orlov</name>
            <email>alexander.orlov@loxal.net</email>
            <organization>Loxal</organization>
            <organizationUrl>http://www.loxal.net</organizationUrl>
            <roles>
                <role>Lead</role>
            </roles>
        </developer>
    </developers>

    <licenses>
        <license>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <name>Apache 2.0</name>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <issueManagement>
        <system>Google Code</system>
        <url>http://code.google.com/p/loxal/issues/list</url>
    </issueManagement>

    <groupId>loxal.lox</groupId>
    <artifactId>Lox</artifactId>
    <version>1.0.1-RELEASE</version>
    <packaging>war</packaging>
    <name>Lox</name>
    <url>http://dev.loxal.net</url>
    <description>Project to demonstrate GAE and GWT development patterns and paradigms</description>

    <scm>
        <connection>scm:hg:http://lox.loxal.googlecode.com/hg</connection>
        <developerConnection>scm:hg:https://lox.loxal.googlecode.com/hg</developerConnection>
        <url>http://lox.loxal.googlecode.com/hg</url>
    </scm>

    <distributionManagement>
        <repository>
            <id>loxal</id>
            <name>loxal-releases</name>
            <!--<url>http://loxal.artifactoryonline.com/loxal/libs-releases-local</url>-->
            <url>file://${user.home}/.m2/repository</url>
        </repository>
        <snapshotRepository>
            <id>loxal</id>
            <name>loxal-snapshots</name>
            <!--<url>http://loxal.artifactoryonline.com/loxal/libs-snapshots-local</url>-->
            <url>file://${user.home}/.m2/repository</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <gae.app.name>lox-loxal</gae.app.name>
        <spring.version>3.0.5.RELEASE</spring.version>
        <aspectj.version>1.6.10</aspectj.version>
        <gae.version>1.4.2</gae.version>
        <gae.runtime>1.4.2</gae.runtime>
        <gae.maven>0.8.4</gae.maven>
        <gae.home>
            ${user.home}/.m2/repository/com/google/appengine/appengine-java-sdk/${gae.version}/appengine-java-sdk-${gae.version}
        </gae.home>
        <gwt.version>2.2.0</gwt.version>
    </properties>

    <repositories>
        <!--<repository>-->
        <!--<id>spring-maven-release</id>-->
        <!--<name>Spring Maven Release Repository</name>-->
